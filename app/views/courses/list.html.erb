<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>


<form action="course\filter">
    <div class="form-group" style="float:left;margin:5px 10px 20px 40px">
<label for="name">学时/学分</label>
<select name="select_credit" class="form-control" , style="width:150px">
      <option selected="selectd"></option>
      <option>60/3.0</option>
      <option>40/2.0</option>
      <option>40/1.0</option>
</select>
</div>

<div class="form-group" style="float:left;margin:5px 10px 20px 40px">
<label for="name">课程属性</label>
<select name="select_course_type" class="form-control" , style="width:150px">

      <option selected="selectd"></option>
      <option>专业核心课</option>
      <option>一级学科核心课</option>
      <option>专业普及课</option>
      <option>公共选修课</option>
</select>
</div>


<div class="form-group" style="float:left;margin:5px 10px 20px 40px">
<label for="name">考试方式</label>
<select name="select_exam_type" class="form-control" , style="width:150px">
      <option selected="selectd"></option>
      <option>课堂开卷</option>
      <option>闭卷笔试</option>
      <option>读书报告</option>
</select>
</div>
<div class="form-group" style="float:left;margin:25px 10px 20px 30px;width:150px">
<input type="submit">
</div>
</form>




    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">选修课程</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>

            <tr>
              <th>课程编号</th>
              <th>课程名称</th>
              <th>课时/学分</th>
              <th>限选</th>
              <th>已选</th>
              <th>课程属性</th>
              <th>授课方式</th>
              <th>上课周数</th>
              <th>上课时间</th>
              <th>考试方式</th>
              <th>主讲教师</th>
              <th>是否为学位课</th>

            </tr>
            </thead>
            <tbody>

            <% @course.each do |course| %>
                <tr>

                  <td><%= course.course_code %></td>
                  <td><%= course.name %></td>
                  <td><%= course.credit %></td>
                  <td><%= course.limit_num %></td>
                  <td><%= course.student_num %></td>
                  <td><%= course.course_type %></td>
                  <td><%= course.teaching_type %></td>
                  <td><%= course.course_week %></td>
                  <td><%= course.course_time %></td>
                  <td><%= course.exam_type %></td>
                  <td><%= course.teacher.name %></td>
                  <td><%= course.course_degree%></td>
                  <td><%= link_to "加入课程", select_course_path(course), class: 'btn-sm btn-info' %></td>

                </tr>
            <% end %>
            </tbody>
          </table>
          <%= will_paginate @courses %>
        </div>
      </div>
    </div>
  </div>
</div>


